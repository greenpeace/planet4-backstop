{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "mobile",
      "width": 320,
      "height": 480
    },
    {
      "label": "small",
      "width": 600,
      "height": 768
    },
    {
      "label": "medium",
      "width": 800,
      "height": 1024
    },
    {
      "label": "large",
      "width": 1024,
      "height": 992
    },
    {
      "label": "xlarge",
      "width": 1300,
      "height": 1024
    }
  ],
  "onBeforeScript": "planet4/onBefore.js",
  "onReadyScript": "planet4/onReady.js",
  "scenarios": [
    {
      "label": "Homepage",
      "url": "https://APP_HOSTNAME/APP_HOSTPATH/?q=no-cache",
      "delay": 3000,
      "misMatchThreshold" : 1.5
    },
    {
      "label": "Search",
      "url": "https://APP_HOSTNAME/APP_HOSTPATH/?s=",
      "delay": 3000,
      "misMatchThreshold" : 1.5
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "waitTimeout": 240000,
    "puppeteerOffscreenCaptureFix": true,
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 10,
  "debug": false,
  "debugWindow": false
}
