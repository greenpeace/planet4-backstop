{
  "id": "backstop_default",
  "delay": 4000,
  "misMatchThreshold": 3,
  "viewports": [
    {
      "label": "mobile",
      "width": 350,
      "height": 490
    },
    {
      "label": "small",
      "width": 500,
      "height": 700
    },
    {
      "label": "medium",
      "width": 700,
      "height": 980
    },
    {
      "label": "large",
      "width": 900,
      "height": 640
    },
    {
      "label": "xlarge",
      "width": 1100,
      "height": 900
    },
    {
      "label": "xxlarge",
      "width": 1500,
      "height": 1100
    }
  ],
  "onBeforeScript": "planet4/onBefore.js",
  "onReadyScript": "planet4/onReady.js",
  "scenarios": [
    {
      "url": "https://APP_HOSTNAME/APP_HOSTPATH/",
      "label": "Home",
      "selectors": [
        "#header",
        "#footer"
      ]
    },
    {
      "label": "Search",
      "url": "https://APP_HOSTNAME/APP_HOSTPATH/?s=",
      "selectors": [
        ".search-bar",
        ".sort-filter",
        "#filter-sidebar-options"
      ]
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": [
    "browser",
    "CI"
  ],
  "engine": "puppeteer",
  "engineOptions": {
    "waitTimeout": 240000,
    "puppeteerOffscreenCaptureFix": true,
    "args": [
      "--no-sandbox"
    ]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 10,
  "debug": false,
  "debugWindow": false
}
